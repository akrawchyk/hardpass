{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
       "esnext",
       "dom"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "downlevelIteration": true
  },
  "include": [
    "typings/*.d.ts",
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
